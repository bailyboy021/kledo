                ],
                "summary": "Get Expense",
                "description": "Get Expense by ID",
                "operationId": "getExpense",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {},
                                "example": {
                                    "id": 2,
                                    "amount": 15000,
                                    "status": {
                                        "id": 1,
                                        "name": "menunggu persetujuan"
                                    },
                                    "approvals": [
                                        {
                                            "id": 4,
                                            "approver": {
